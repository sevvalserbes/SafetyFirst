<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor"
        tools:context=".main.MainActivity">

    <TextView
            android:id="@+id/main_tv_times_of_accident"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_above="@id/main_tv_times_text"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangle_border"
            android:text="@string/default_accident_number"
            android:gravity="center"
            android:fontFamily="@font/simpson"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor"
            android:textSize="80sp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/main_tv_times_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/times_without_an_accident"
            android:fontFamily="@font/simpson"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:textColor="@color/secondaryColor"
            android:textSize="50sp"
            android:textStyle="bold"/>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_tv_times_text"
            android:padding="10sp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

        <ImageButton
                android:id="@+id/main_ib_increment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:src="@drawable/ic_increment_24dp"/>
        <ImageButton
                android:id="@+id/main_ib_decrement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:src="@drawable/ic_decrement_24dp"/>
        <ImageButton
                android:id="@+id/main_ib_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:src="@drawable/ic_clear_24dp"/>

    </LinearLayout>

</RelativeLayout>